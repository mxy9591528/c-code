#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	int n = 0;
	printf("请输入层数:\n");
	scanf("%d", &n);
	getchar();//取出第一次输入后的换行符
	printf("请输入打印的符号:\n");
	int c = getchar();
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j <n+1- i; j++)
		{
			printf(" ");
		}
		for (int j = 0; j <= i; j++)
		{
			printf("%c ",c);
		}
		printf("\n");
	}
	return 0;
}

#include<stdio.h>
int main()
{
	int n, i = 0, j = 0;
	while (~scanf("%d", &n))
	{
		for (i = 0; i < n + 1; i++)
		{
			for (j = 0; j < n - i; j++)
				printf(" ");
			for (j = 0; j <= i; j++)
				printf("* ");
			printf("\n");
		}//打印上半部分三角
		i = n;
		for (; i > 0; i--)
		{
			for (j = 0; j <= n - i; j++)
				printf(" ");
			for (j = 0; j < i; j++)
				printf("* ");
			printf("\n");
		}//打印下半部分三角
	}
	return 0;
