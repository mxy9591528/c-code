#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	int n = 0;
	printf("请输入层数:\n");
	scanf("%d", &n);
	getchar();//取出第一次输入后的换行符
	printf("请输入打印的符号:\n");
	int c = getchar();
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j <n+1- i; j++)
		{
			printf(" ");
		}
		for (int j = 0; j <= i; j++)
		{
			printf("%c ",c);
		}
		printf("\n");
	}
	return 0;
}

#include<stdio.h>
int main()
{
	int n, i = 0, j = 0;
	while (~scanf("%d", &n))
	{
		for (i = 0; i < n + 1; i++)
		{
			for (j = 0; j < n - i; j++)
				printf(" ");
			for (j = 0; j <= i; j++)
				printf("* ");
			printf("\n");
		}//打印上半部分三角
		i = n;
		for (; i > 0; i--)
		{
			for (j = 0; j <= n - i; j++)
				printf(" ");
			for (j = 0; j < i; j++)
				printf("* ");
			printf("\n");
		}//打印下半部分三角
	}
	return 0;

#include<stdio.h>
int main()
{
	int n, i = 0, j = 0, q = 0;
	while (~scanf("%d", &n))
	{
		int x = n;
		for (q = 0; q <= n; q++)
		{
			for (i = 0; i < 2 * x; i++)
			{
				printf(" ");
			}
			x--;
			for (j = 0; j < q + 1; j++)
			{
				printf("*");
			}
			printf("\n");
		}
		x = 1;
		int c = n+1;
		for (q = 0; q < n; q++)
		{
			for (i = 0; i<2*x; i++)
			{
				printf(" ");
			}
			x++;
			c--;
			for (j = 0; j <c; j++)
			{
				printf("*");
			}
			if (x == n+1)
				break;
			printf("\n");
		}
	}
	return 0;
}//打印箭形

#include<stdio.h>
int main()
{
	int n = 0, i = 0, j = 0;
	while (~scanf("%d", &n))
	{
		int ret = n;
		for (i = 0; i < n - (n/2); i++)
		{
			ret -= 2;
			for (j = 0; j < i; j++)
			{
				printf(" ");
			}
			printf("*");
			for (j = 0; j < ret; j++)
			{
				printf(" ");
			}
			if (i == n - (n/2)-1 && n % 2 == 1)
				;
			else
				printf("*");
			printf("\n");
		}
		for (i = n - (n/2)-(n%2); i > 0; i--)
		{
			for (j = 0; j < i - 1; j++)
			{
				printf(" ");
			}
			if (i == n - (n / 2) && n % 2 == 1)
				;
			else
				printf("*");
			for (j = n - 2 * i; j > 0; j--)
			{
				printf(" ");
			}
			if (i == n - (n / 2) && n % 2 == 1)
				;
			else
				printf("*");
			printf("\n");
		}
	}
	return 0;
}//打印X
#include<stdio.h>
int main()
{
	int i, j, n;
	scanf("%d", &n);
	for (i = 0; i < n; i++)
	{
		for (j = 0; j < n; j++)
		{
			if (i == j || ((i == n - j - 1) && i != j))
				printf("*");
			else
				printf(" ");
		}
		printf("\n");
	}
}//规律版打印X
