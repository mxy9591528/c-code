#include<stdio.h>
int main()
{
	int n = 0, count = 0;
	scanf("%d", &n);
	for (int i = 0; i < 32; i++)
	{
		if ((n)  & 1 == 1)
			count++;
		n >>= 1;
	}
	printf("%d", count);
	return 0;
}//计算二进制数中1的个数

#include<stdio.h>
int main()
{
	int a = 7, b = 9;
	a = a + b;
	b = a - b;
	a = a - b;//缺点，可能溢出
	printf("%d %d\n", a, b);
	int c = 4, d = 7;
	c = c ^ d;
	d = c ^ d;
	c = c ^ d;
	printf("%d %d\n", c, d);
	return 0;
}//不创建临时变量交换
